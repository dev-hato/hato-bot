{
  "name": "hato-bot",
  "description": "愛嬌のあるslack用bot",
  "website": "https://github.com/nakkaa/hato-bot",
  "repository": "https://github.com/nakkaa/hato-bot",
  "env": {
    "SLACK_API_TOKEN": {
      "description": "Set your slack API Token.",
      "value": ""
    },
    "SLACK_SIGNING_SECRET": {
      "description": "Set your slack signing secret.",
      "value": ""
    },
    "YAHOO_API_TOKEN": {
      "description": "Set your Yahoo client ID.",
      "value": ""
    },
    "TZ": {
      "description": "Set your timezone.",
      "value": "Asia/Tokyo"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  }
}